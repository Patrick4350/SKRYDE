{
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "api/index.ts" },
    { "handle": "filesystem" },
    { "src": "^(?!/api)(.*)$", "dest": "frontend/build/index.html" }
  ],
  "buildCommand": "npm ci --prefix backend && npm ci --prefix frontend && npx --prefix backend prisma generate && npm run build --prefix frontend"
}

